float4 main(uint vid : SV_VERTEXID) : SV_POSITION
{
	const float2 tex = { (vid << 1) & 2, vid & 2 };
	
	return float4(tex * float2(2.0, -2.0) + float2(-1.0, 1.0), 1.0.xx);;
}
